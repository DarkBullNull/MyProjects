<Window x:Class="CountTheCharacters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CountTheCharacters"
        mc:Ignorable="d"
        Title="TextReader" Height="287" Width="459" Closed="Window_Closed">
    <Grid>
        <Button Content="Load File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="66" Height="30" Click="Button_Click" Margin="1,1,0,0" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label x:Name="CountLines" Content="Количество строк: " HorizontalAlignment="Left" Margin="-3,33,0,0" VerticalAlignment="Top" Height="28"/>
        <Label x:Name="SizeFile" Content="Вес файла: " HorizontalAlignment="Left" Margin="-3,53,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
